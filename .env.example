# ── Application ────────────────────────────────────────────────────────────────
APP_ENV=development           # development | production
APP_HOST=0.0.0.0
APP_PORT=8000
APP_SECRET_KEY=change-me-in-production

# ── Database ────────────────────────────────────────────────────────────────────
# SQLite (development default — file created automatically):
DATABASE_URL=sqlite:///./housing_portal.db
# PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/housing_portal

# ── INE API (Instituto Nacional de Estadística) ─────────────────────────────────
# Public API — no key required, but respect rate limits (≤10 req/s)
INE_BASE_URL=https://servicios.ine.es/wstempus/js/ES
INE_RATE_LIMIT_DELAY=0.5     # seconds between requests

# ── Catastro API ────────────────────────────────────────────────────────────────
# Public SOAP/REST API — no key required
CATASTRO_BASE_URL=https://ovc.catastro.meh.es/OVCServCatastro/OVCWCFLibres

# ── Idealista API (requires registration) ───────────────────────────────────────
# Register at: https://developers.idealista.com/
IDEALISTA_API_KEY=
IDEALISTA_SECRET=
IDEALISTA_BASE_URL=https://api.idealista.com/3.5

# ── Fotocasa API (requires Schibsted partner agreement) ─────────────────────────
FOTOCASA_API_KEY=

# ── Madrid Open Data Portal ─────────────────────────────────────────────────────
MADRID_OPEN_DATA_URL=https://datos.madrid.es/egob/catalogo

# ── Scheduler ───────────────────────────────────────────────────────────────────
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=Europe/Madrid
# Cron expressions (UTC):
SCHEDULE_DAILY_UPDATE=0 6 * * *     # 06:00 UTC daily
SCHEDULE_WEEKLY_FULL=0 2 * * 1      # 02:00 UTC every Monday

# ── Caching ─────────────────────────────────────────────────────────────────────
CACHE_TTL_SECONDS=3600       # 1 hour default cache TTL
GEOJSON_CACHE_PATH=./static/assets/madrid_districts.geojson

# ── Logging ─────────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
LOG_FILE=./logs/housing_portal.log
